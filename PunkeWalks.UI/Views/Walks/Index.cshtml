@model IEnumerable<PunWalks.UI.Models.DTO.WalksDTO>

@{
}


    <h1 class="mt-3">Walks</h1>

<div class="table-responsive">  <!-- Wrap the table inside this div -->
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>LengthInKm</th>
                <th>WalkImageUrl</th>
                <th>Region</th>
                <th>Difficulty</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td class="text-truncate" style="max-width: 250px;">@item.Description</td>
                    <td>@item.LengthInKm</td>
                    <td class="text-truncate" style="max-width: 250px;"><a href="@item.WalkImageUrl">Image</a></td>
                    <td>@item.Region</td>
                    <td>@item.Difficulty</td>
                </tr>
            }
        </tbody>
    </table>
</div>
    

